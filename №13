#include<iostream>
#include<cmath>
using namespace std;
int main(){
	double r1,r2,s1,s2,s3,pi=3.14;
	cout << "Input number 1r ";
	cin >> r1;
	cout << "Input number 2r ";
	cin >> r2;
	s1 = pi*r1*r1;
	s2 = pi*r2*r2;
	s3 = abs(s1-s2);
	cout << "Ps 1kola" << s1 << endl;
	cout << "Ps 2kola" << s2 << endl;
	cout << "Ps kilca" << s3;}
